{{#extends 'base'}}

{{#block 'content'}}
    <form method="POST">
        <div>
            <label class="form-label mt-3">Date:</label>
            <input type="date" name="date" class="form-control"/>
        </div>
        <div>
            <label class="form-label mt-3">Name:</label>
            <input type="text" name="name" class="form-control"/>
        </div>
        <div>
            <label class="form-label mt-3">Meal:</label>
            <select name="meal" class="form-control">
                <option value="breakfast">Breakfast</option>
                <option value="lunch">Lunch</option>
                <option value="dinner">Dinner</option>
                <option value="snack">Snack/Supper</option>
            </select>
        </div>
        <div>
            <label class="form-label mt-3">Calories</label>
            <input type="text" name="calories" class="form-control"/>
        </div>
        <div>
            <label class="form-label mt-3">Tags</label>
            <div>
                <input name="tags" type="checkbox" value="unhealthy"><label>Unhealthy</label>
                <input name="tags" type="checkbox" value="oily"><label>Oily</label>
                <input name="tags" type="checkbox" value="delicious"><label>Delicious</label>
                <input name="tags" type="checkbox" value="vegan"><label>Vegetarian</label>
                <input name="tags" type="checkbox" value="glutten-free"><label>Glutten Free</label>
                <input name="tags" type="checkbox" value="impossible-meat"><label>Impossible Meat</label>
            </div>
        </div>
        <div>
        <input type="submit" value="Submit" class="btn btn-primary mt-3"/>
        <a href="/food" class="btn btn-danger mt-3">Cancel</a>
        </div>
    </form>
{{/block}}

{{/extends}}